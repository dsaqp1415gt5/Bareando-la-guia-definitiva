<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingTop="3dip"
    android:paddingBottom="3dip">

    <ImageView
        android:id="@+id/ivImagenDetail"
        android:layout_width="339dp"
        android:layout_height="144dp"
        android:paddingTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvNombreDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:maxLines="2" />

        <TextView
            android:id="@+id/tvDescripcionDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvGeneroDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvNotaDetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CargarComentarios"
        android:id="@+id/button"
        android:onClick="cargarComentarios"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
        android:id="@+id/comentarios_layout">

        <ImageView
            android:id="@+id/ivImagenUser"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:paddingTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvComentarioNick"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:maxLines="2" />

            <TextView
                android:id="@+id/tvComentarioMensaje"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>