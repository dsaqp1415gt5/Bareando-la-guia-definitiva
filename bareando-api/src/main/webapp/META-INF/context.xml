<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Resource name="jdbc/bareando" auth="Container" type="javax.sql.DataSource"
		maxActive="10" maxIdle="5" username="bareando" password="bareando"
		driverClassName="com.mysql.jdbc.Driver"
		url="jdbc:mysql://localhost:3306/bareando?autoReconnect=true" />
	<Realm className="org.apache.catalina.realm.DataSourceRealm"
		dataSourceName="jdbc/bareando" localDataSource="true" digest="MD5"
		userTable="usuarios" userNameCol="nick" userCredCol="pass"
		userRoleTable="user_roles" roleNameCol="rolename" />
</Context>